          {% endif %}
          font-size: {{ settings.slider_mobile_lead_textsize }};
          line-height: {{ settings.slider_mobile_lead_line_height }};
        }
        .linkprompt{
          {% if settings.slider_mobile_cta_frame %}
          border-style: solid;
          border-width: {{ settings.slider_mobile_cta_frame_width }};
