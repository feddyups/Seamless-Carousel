/* SEAMLESS CAROUSEL */
#home_feature_images {
  display: none;
}

/*Carousel */
.carousel {
  cursor: default;
  display: none;
  overflow: hidden;
  position: relative;
  width: 100%;
  img {
    display: block;
    height: auto;
    width: 100%;
    position: absolute;
    z-index: 1;
    top: 0;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .slides {
    overflow: hidden;
    position: relative;
    width: 100%;
    div {
      left: 0;
      position: absolute;
      top: 0;
      div {
        left: 50%;
        top: 0;
      }
    }
  }
  {% if settings.slider_showprevnext %}
  .menu {
    height: 100%;
    width: 100%;
    li {
      box-sizing:border-box;
      -moz-box-sizing:border-box;
      display: inline-block;
      height: 100%;
      position: relative;
      width: 50%;
      span {
        background: url("{{ 'seamless_carousel_menu_nav.svg' | asset_url }}") no-repeat;
        cursor: pointer;
        display: inline-block;
        height: 100%;
        position: relative;
        width: 56px;
        z-index: 2;
        opacity: 0;
        -webkit-transition: opacity 0.3s ease;
        -moz-transition: opacity 0.3s ease;
        -o-transition: opacity 0.3s ease;
        transition: opacity 0.3s ease;
        &:hover {
          opacity: 1;
        }
      }
    }
    .prev {
        padding-left: 10px;
        span{
          background-position: left center !important;
          float: left;
        }
      }
    .next {
      padding-right: 10px;
      span{
        background-position: right center !important;
        float: right;
      }
    }
  }
  {% endif %}

  {% if settings.slider_showthumbnails %}
  .thumb_pagination{
    background-color: rgba(255, 255, 255, 0.6);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    bottom: 0;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.4);
    position: absolute;
    text-align: center;
    width: 100%;
    z-index: 4;
    li{
      background-color: rgba(0, 0, 0, 0.1);
      border-right: 1px solid rgba(0, 0, 0, 0.2);
      box-shadow: 1px 0 0 rgba(255, 255, 255, 0.8);
      display: inline-block;
      height: auto;
      margin-bottom: 0;
      padding: 10px;
      text-align: center;
      top: 0;
      vertical-align: top;
      width: 50px;
      &:first-child{
        border-left: 1px solid rgba(0, 0, 0, 0.2);
        box-shadow: -1px 0 0 rgba(255, 255, 255, 0.8), 1px 0 0 rgba(255, 255, 255, 0.8);
      }
      a{
        height: 100%;
        width: 100%;
        cursor: pointer;
        .thumbswapper{
          border: 1px solid rgba(0, 0, 0, 0.2);
          position: unset;
          width: auto;
          opacity: 0.5;
          -webkit-transition: opacity 0.3s ease;
          -moz-transition: opacity 0.3s ease;
          -o-transition: opacity 0.3s ease;
          transition: opacity 0.3s ease;
        }
      }

      .active .thumbswapper{
        opacity: 1 !important;
      }

    }
  }
  {% endif %}
 

  ul.mobile-pagination {
	  display: none;
	  margin: 10px 0;
	  text-align: center;
    margin: 30px 10px;
    overflow: hidden;
     li {
       display: inline-block;
       font-family: Helvetica, Arial, sans-serif;
       font-size: 36px;
       font-weight: normal;
       a {
         color: #b3b3b3 !important;
         cursor: pointer;
         text-decoration: none;
         &:hover,&:active{
           color: #666 !important;
         }
       }
     }
  }






}

#home-carousel div.loading-bar {
	background: none repeat scroll 0 0 transparent;
  height: 4px;
	left: 0;
	position: absolute;
	top: 0;
	width: 0;
  z-index: 1;
	-webkit-transition: width 0.3s ease;
	-moz-transition: width 0.3s ease;
	-o-transition: width 0.3s ease;
	transition: width 0.3s ease;
  box-shadow: 0 4px 0 rgba(0, 0, 0, 0.2) inset, 0 1px 0 rgba(0, 0, 0, 0.3);
}




/*text overlays for the slider*/

.hideoverlay{
    display: none !important;
}

  .textoverlay{
    color: #FFFFFF;
    display: table;
    font-size: 20px;
    height: 100%;
    letter-spacing: 0;
    line-height: normal;
    position: relative !important;
    text-transform: uppercase;
    width:100%;
    max-width:960px;
    margin:0 auto;
    z-index: 2;
    div{
      position: inherit !important;
      text-shadow: 0 0 8px rgba(0, 0, 0, 0.6);
    }
    .encircle{
        display: table-cell;
       text-align: center;
       vertical-align: middle; 
       .tightwidth{ 
        display: inline-block;
        width: auto;
        .framed{
            border: 3px solid rgba(255,255,255,0.85);
            display: block;
            font-family: 'walkway_blackregular';
            font-size: 33px;
            letter-spacing: 0.1em;
            line-height: 65px;
            padding: 0 66px;
            .no-touch &:hover{ border: 3px solid rgba(255,255,255,1);}
        }
        .unframed{
          font-size: 18px;
          text-transform:lowercase;
          letter-spacing: 0.2em;
          line-height: 44px;
        }
        .linkprompt{
          font-size: 14px;
          font-style: italic !important;
          letter-spacing: 0.15em;
          line-height: 46px;
          opacity:0.85;
          .no-touch &:hover{ opacity:1;}
          .inthelink{
          }
          .leftspanned{}
          .rightspanned{}
        }
      }
    }
  }
  .orangestyle{
    .encircle{
      text-shadow:none;
      .tightwidth{ 
        .framed, .unframed,.linkprompt{
          font-family: "Camphor W01 Medium","HelveticaNeue-Light","Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,"Lucida Grande",sans-serif;
          font-style: normal !important;
          letter-spacing: normal;
        }
        .framed{
          border: medium none;
          color: #F68E1E;
          display: block;
          font-size: 33px;
          line-height: 65px;
          padding: 0;
        }
        .unframed,.linkprompt{
          color: #C4C1B7;
          text-transform: lowercase;
        }
      }
    }
  }
  .leftaligned{
    .tightwidth{ 
      float: left;
    }
  }
  .rightaligned{
  .tightwidth{ 
      float: right;
    }
  }
  .centeralignedtop{
    .encircle{
      padding-top: 10px !important;
      vertical-align: top !important;
    }
  }
  .leftalignedtop{
    .encircle{
      padding-top: 10px !important;
      vertical-align: top !important;
      text-align: left;
    }
    .tightwidth{
      text-align: center;
    }
  }
  .rightalignedtop{
    .encircle{
      padding-top: 10px !important;
      vertical-align: top !important;
      text-align: right;
    }
    .tightwidth{
      text-align: center;
    }
  }
  .centeralignedbottom{
    .encircle{
      padding-bottom: 10px;
      vertical-align: bottom;
    }
  }
  .leftalignedbottom{
    .encircle{
      padding-bottom: 10px;
      vertical-align: bottom;
      text-align: left;
    }
    .tightwidth{
      text-align: center;
    }
  }
  .rightalignedbottom{
    .encircle{
      padding-bottom: 10px;
      vertical-align: bottom;
      text-align: right;
    }
    .tightwidth{
      text-align: center;
    }
  }




.paginationwrap {
    display: inline-block;
    height: 100%;
    left: 0;
    margin: 0 auto;
    position: absolute;
    right: 0;
    top: 0;
}

@media all and (max-width: 980px) and (min-width: 0) {


  #home-carousel ul.pagination {
    display:none;
  }
  #home-carousel ul.mobile-pagination {
    display:block;
  }
  #home-carousel .menu {
    display:none;
  }

  #home_feature {
    height: auto;
    min-width: 0;
    width: 100%;
  }

  .hidetextboxformobile.textoverlay, .hideformobile{
    display: none !important;
  }

  .centerformobile{
    .encircle{
    padding: 0 !important;
    text-align: center !important;
    vertical-align: middle !important;
    }
    .tightwidth{
      float: none !important;

    }
  }

}

