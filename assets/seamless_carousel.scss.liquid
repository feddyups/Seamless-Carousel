/*Control the views of the images for mobile or not*/
@media all and (min-width: 1480px) {
  .paginationwrap {
    width: 1440px;
    margin: 0 auto;
  }
}
@media all and (max-width: 1240px) {
  .paginationwrap {
    width: 960px;
    margin: 0 auto;
  }
}
@media all and (max-width: 980px) and (min-width: 0) {
  .paginationwrap {
    min-width: 320px;
    width: 100%;
    margin: 0 auto;
  }

  #home-carousel ul.pagination {
    display:none;
  }
  #home-carousel ul.mobile-pagination {
    display:block;
  }
  #home-carousel .menu {
    display:none;
  }

  #home_feature {
    height: auto;
    min-width: 0;
    width: 100%;
  }

  .hidetextboxformobile.textoverlay, .hideformobile{
    display: none !important;
  }

  .centerformobile{
    .encircle{
    padding: 0 !important;
    text-align: center !important;
    vertical-align: middle !important;
    }
    .tightwidth{
      float: none !important;

    }
  }

}

