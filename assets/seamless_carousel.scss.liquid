/*text overlays for the slider*/

.hideoverlay{
    display: none !important;
}

  .textoverlay{
    color: #FFFFFF;
    display: table;
    font-size: 20px;
    height: 100%;
    letter-spacing: 0;
    line-height: normal;
    position: relative !important;
    text-transform: uppercase;
    width:100%;
    max-width:960px;
    margin:0 auto;
    z-index: 2;
    div{
      position: inherit !important;
      text-shadow: 0 0 8px rgba(0, 0, 0, 0.6);
    }
    .encircle{
        display: table-cell;
       text-align: center;
       vertical-align: middle; 
       .tightwidth{ 
        display: inline-block;
        width: auto;
        .framed{
            border: 3px solid rgba(255,255,255,0.85);
            display: block;
            font-family: 'walkway_blackregular';
            font-size: 33px;
            letter-spacing: 0.1em;
            line-height: 65px;
            padding: 0 66px;
            .no-touch &:hover{ border: 3px solid rgba(255,255,255,1);}
        }
        .unframed{
          font-size: 18px;
          text-transform:lowercase;
          letter-spacing: 0.2em;
          line-height: 44px;
        }
        .linkprompt{
          font-size: 14px;
          font-style: italic !important;
          letter-spacing: 0.15em;
          line-height: 46px;
          opacity:0.85;
          .no-touch &:hover{ opacity:1;}
          .inthelink{
          }
          .leftspanned{}
          .rightspanned{}
        }
      }
    }
  }
  .orangestyle{
    .encircle{
      text-shadow:none;
      .tightwidth{ 
        .framed, .unframed,.linkprompt{
          font-family: "Camphor W01 Medium","HelveticaNeue-Light","Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,"Lucida Grande",sans-serif;
          font-style: normal !important;
          letter-spacing: normal;
        }
        .framed{
          border: medium none;
          color: #F68E1E;
          display: block;
          font-size: 33px;
          line-height: 65px;
          padding: 0;
        }
        .unframed,.linkprompt{
          color: #C4C1B7;
          text-transform: lowercase;
        }
      }
    }
  }
  .leftaligned{
    .tightwidth{ 
      float: left;
    }
  }
  .rightaligned{
  .tightwidth{ 
      float: right;
    }
  }
  .centeralignedtop{
    .encircle{
      padding-top: 10px !important;
      vertical-align: top !important;
    }
  }
  .leftalignedtop{
