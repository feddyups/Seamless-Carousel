{% if settings.slider_checkout_custom_css %}{{ settings.slider_checkout_custom_css }}{% endif %}

#home_feature_images {
  display: none;
}

/*Carousel */
.carousel {
  cursor: default;
  display: none;
  overflow: hidden;
  position: relative;
  width: 100%;
  img {
    display: block;
    height: auto;
    width: 100%;
    position: absolute;
    z-index: 1;
    top: 0;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    li{
      margin: 0;
    }
  }
  


  {% if settings.showpagination %}
  /* Pagination Relative */
  .paginationwrap {
    display: inline-block;
    height: 100%;
    left: 0;
    margin: 0 auto;
    position: absolute;
    right: 0;
    top: 0;
    
    {% if settings.slider_showprevnext %}
    .menu {
      height: 100%;
      width: 100%;
      li {
        box-sizing:border-box;
        -moz-box-sizing:border-box;
        display: inline-block;
        height: 100%;
        position: relative;
        width: 50%;
        span {
          background: url("{{ 'seamless_carousel_menu_nav.svg' | asset_url }}") no-repeat;
          cursor: pointer;
          display: inline-block;
          height: 100%;
          position: relative;
          width: 56px;
          z-index: 2;
          opacity: 0;
          -webkit-transition: opacity 0.3s ease;
          -moz-transition: opacity 0.3s ease;
          -o-transition: opacity 0.3s ease;
          transition: opacity 0.3s ease;
          &:hover {
            opacity: 1;
          }
        }
      }
      .prev {
          padding-left: 10px;
          span{
            background-position: left center !important;
            float: left;
          }
        }
      .next {
        padding-right: 10px;
        span{
          background-position: right center !important;
          float: right;
        }
      }
    }
    {% endif %}

    {% if settings.slider_showthumbnails %}
    .thumb_pagination{
      background-color: rgba(255, 255, 255, 0.6);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      border-top: 1px solid rgba(0, 0, 0, 0.2);
      bottom: 0;
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.4);
      position: absolute;
      text-align: center;
      width: 100%;
      z-index: 4;
      li{
        background-color: rgba(0, 0, 0, 0.1);
        border-right: 1px solid rgba(0, 0, 0, 0.2);
        box-shadow: 1px 0 0 rgba(255, 255, 255, 0.8);
        display: inline-block;
        height: auto;
        margin-bottom: 0;
        padding: 10px;
        text-align: center;
        top: 0;
        vertical-align: top;
        width: 50px;
        &:first-child{
          border-left: 1px solid rgba(0, 0, 0, 0.2);
          box-shadow: -1px 0 0 rgba(255, 255, 255, 0.8), 1px 0 0 rgba(255, 255, 255, 0.8);
        }
        a{
          height: 100%;
          width: 100%;
          cursor: pointer;
          .thumbswapper{
            border: 1px solid rgba(0, 0, 0, 0.2);
            position: unset;
            width: auto;
            opacity: 0.5;
            -webkit-transition: opacity 0.3s ease;
            -moz-transition: opacity 0.3s ease;
            -o-transition: opacity 0.3s ease;
            transition: opacity 0.3s ease;
          }
        }
        .active .thumbswapper{
          opacity: 1 !important;
        }
      }
    }
    {% endif %}
 
    ul.mobile-pagination {
      display: none;
    }
  } 
  {% endif %}

.loading-bar {
  background: none repeat scroll 0 0 transparent;
  height: 4px;
  left: 0;
  position: absolute;
  top: 0;
  width: 0;
  z-index: 1;
  -webkit-transition: width 0.3s ease;
  -moz-transition: width 0.3s ease;
  -o-transition: width 0.3s ease;
  transition: width 0.3s ease;
  box-shadow: 0 4px 0 rgba(0, 0, 0, 0.2) inset, 0 1px 0 rgba(0, 0, 0, 0.3);
}




/*text overlays for the slider*/

.hideoverlay{
    display: none !important;
}

  

  .slides {
    overflow: hidden;
    position: relative;
    width: 100%;
    section{
      width: 100%;
      height: 100%;
    }
    div {
      left: 0;
      position: absolute;
      top: 0;
      div {
        left: 50%;
        top: 0;
      }
    }
  }
}

/* Text Options */

.textoverlay{
    display: table;
    height: 100%;
    width:100%;
    margin:0 auto;
    z-index: 2;
    left: 0 !important;
    position: relative !important;
    div{
      left:0 !important;
      position: relative !important;
    }
    .encircle{
      display: table-cell;
      padding-left: {{ settings.slider_left_txt_offset }};
      padding-right:{{ settings.slider_right_txt_offset }};
      padding-top:{{ settings.slider_top_txt_offset }};
      padding-bottom:{{ settings.slider_bottom_txt_offset }};
      text-align: center;
      vertical-align: middle; 
      .tightwidth{ 
        display: inline-block;
        width: auto;
        .headline{
          {% if settings.slider_headline_frame %}
          border-style: solid;
          border-width: {{ settings.slider_headline_frame_width }};
          {% endif %}

          {% unless settings.slider_font_observer %}
          font-family: {{ settings.slider_headline_font }};
          {% endunless %}

          font-size: {{ settings.slider_headline_textsize }};
          line-height: {{ settings.slider_headline_line_height }};
          padding: {{ settings.slider_headline_padding }};
          display: block;
        }
        .lead{
          {% if settings.slider_lead_frame %}
          border-style: solid;
          border-width: {{ settings.slider_lead_frame_width }};
          {% endif %}
          font-size: {{ settings.slider_lead_textsize }};
          line-height: {{ settings.slider_lead_line_height }};
          {% unless settings.slider_font_observer %}
          font-family: {{ settings.slider_lead_font }};
          {% endunless %}

        }
        .linkprompt{
          {% if settings.slider_cta_frame %}
          border-style: solid;
          border-width: {{ settings.slider_cta_frame_width }};
          {% endif %}
          font-size: {{ settings.slider_cta_textsize }};
          line-height: {{ settings.slider_cta_line_height }};
          opacity:0.85;
          {% unless settings.slider_font_observer %}
          font-family: {{ settings.slider_cta_font }};
          {% endunless %}
          padding:{{ settings.slider_cta_pad }};
          .no-touch &:hover{
            opacity:1;
          }
        }
      }
    }
  }

{% if settings.slider_font_observer %}
.fonts-loaded{ 
  .headline{
    font-family: {{ settings.slider_headline_font }};
  }
  .lead{
    font-family: {{ settings.slider_lead_font }};
  }
  .linkprompt{
    font-family: {{ settings.slider_cta_font }};
  }
}
{% endif %}

  .dark_theme{
      .tightwidth{ 
        div{
          text-shadow: 0 0 8px {{ settings.slider_cta_style2_txt_shadow }};
        }
        .headline{
          color: {{ settings.slider_headline_style2_color }};
          border-color: {{ settings.slider_headline_style2_color }};
        }
        .lead{
          color: {{ settings.slider_lead_style2_color }};
          border-color: {{ settings.slider_lead_style2_color }};
        }
        .linkprompt{
          background-color: {{ settings.slider_cta_link_bg_style2_color }};
          color: {{ settings.slider_cta_style2_color }};
          border-color: {{ settings.slider_cta_style2_color }};
          &:hover{
            background-color: {{ settings.slider_cta_link_bg_hover_style2_color }};
            color: {{ settings.slider_cta_link_hover_style2_color }};
          }
        }
      }
    }
    .light_theme {
      .tightwidth{
        div{
          text-shadow: 0 0 8px {{ settings.slider_cta_style1_txt_shadow }};
        } 
        .headline{
          color: {{ settings.slider_headline_style1_color }};
          border-color: {{ settings.slider_headline_style1_color }};
        }
        .lead{
          color: {{ settings.slider_lead_style1_color }};
          border-color: {{ settings.slider_lead_style1_color }};
        }
        .linkprompt{
          color: {{ settings.slider_cta_style1_color }};
          border-color: {{ settings.slider_cta_style1_color }};
          background-color: {{ settings.slider_cta_link_bg_style1_color }};
          &:hover{
            background-color: {{ settings.slider_cta_link_bg_hover_style1_color }};
            color: {{ settings.slider_cta_link_hover_style1_color }};
          }
        }
      }
    }
  .leftaligned{
    .tightwidth{ 
      float: left;
    }
  }
  .rightaligned{
  .tightwidth{ 
      float: right;
    }
  }
  .centeralignedtop{
    .encircle{
      vertical-align: top !important;
    }
  }
  .leftalignedtop{
    .encircle{
      vertical-align: top !important;
      text-align: left;
    }
    .tightwidth{
      text-align: center;
    }
  }
  .rightalignedtop{
    .encircle{
      vertical-align: top !important;
      text-align: right;
    }
    .tightwidth{
      text-align: center;
    }
  }
  .centeralignedbottom{
    .encircle{
      vertical-align: bottom;
    }
  }
  .leftalignedbottom{
    .encircle{
      vertical-align: bottom;
      text-align: left;
    }
    .tightwidth{
      text-align: center;
    }
  }
  .rightalignedbottom{
    .encircle{
      vertical-align: bottom;
      text-align: right;
    }
    .tightwidth{
      text-align: center;
    }
  }

#mobile_content {
      display: none;
    }

   


@media all and (max-width: {{ settings.mobilewidth }}px) and (min-width: 0) {

  #home-carousel ul.pagination, .thumb_pagination {
    display:none;
  }
  
  ul.mobile-pagination {
      display:block !important;
      position: absolute;
      text-align: center;
      width: 100%;
      z-index: 4;
       li {
         display: inline-block;
         font-family: Helvetica, Arial, sans-serif;
         font-size: 36px;
         font-weight: normal;
         a {
           color: #b3b3b3 !important;
           cursor: pointer;
           text-decoration: none;
           &:hover,&:active{
             color: #666 !important;
           }
         }
         a.active{
             color: #666 !important;
           }
       }
    }


  #home-carousel .menu {
    display:none;
  }
  #home_feature {
    height: auto;
    min-width: 0;
    width: 100%;
  }
  .hidetextboxformobile.textoverlay, .hideformobile{
    display: none !important;
  }

  #mobile_content .textoverlay{
    text-align: center;
    display: none;
    .encircle{
      display: block;
    }
  }

  #mobile_content, #mobile_content .textoverlay.active{
    display: block;
  }

  .textoverlay{
    .encircle{
      padding: {{ settings.slider_mobile_txt_padding }} !important;
      text-align: center;
      vertical-align: middle;
      .tightwidth{ 
        float: none !important;
        .headline{
          {% if settings.slider_mobile_headline_frame %}
          border-style: solid;
          border-width: {{ settings.slider_mobile_headline_frame_width }};
          {% endif %}
